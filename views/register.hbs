<h4>After creating your account, you will be asked to sign in and provide a security question.</h4>
<div class="row">
</div>
<form method="post" class="form">
  <div class="form-group">
    <label for="firstname">
      First Name
      <input class="form-control" id="firstname" name="firstName" required value="{{body.firstName}}" />
      <label class="error">{{errors.firstName}}</label>
    </label>
  </div>
  <div class="form-group">
    <label for="lastname">
      Last Name
      <input class="form-control" id="lastname" name="lastName" required value="{{body.lastName}}" />
      <label class="error">{{errors.lastName}}</label>
    </label>
  </div>
  <div class="form-group">
    <label for="email">
      Email address
      <input class="form-control" type="email" id="email" name="email" required value="{{body.email}}" />
      <label class="error">{{errors.email}}</label>
      <label class="error">{{errors.login}}</label>
    </label>
  </div>
  <div class="form-group">
    <label for="password">
      Password
      <input
      name="password"
      type="password"
      class="form-control"
      required
      value="{{body.password}}"
      />
      <label class="error">{{errors.password}}</label>
    </label>
  </div>

  <button type="submit" class="btn btn-primary">Register</button>
</form>
